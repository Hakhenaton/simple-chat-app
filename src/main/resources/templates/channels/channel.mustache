<div 
    hx-ext="ws"
    ws-connect="/channels/{{ channelId }}"
    x-channel-id="{{ channelId }}" 
    class="channel"
    {{#oob}}
        hx-swap-oob='outerHTML:[x-channel-id="{{ channelId }}"]'
    {{/oob}}    
>
    {{>style}}
    <div class="channel-main">
        <wcs-card class="channel-users">
            <p class="channel-users-total-connections"></p>
            <ul class="channel-users-list"></ul>
        </wcs-card>
        <div class="channel-messages">
            <div class="channel-message-feed"></div>
            <wcs-divider></wcs-divider>
            <div class="channel-message-form-body">
                <form 
                    ws-send 
                    hx-on::ws-after-send="htmx.find(this, '.message-input').value = ''"
                    class="channel-message-form"
                >
                    <wcs-textarea 
                        name="message"
                        class="message-input"
                        icon="send"
                        resize="none"
                        autoGrow
                        cols="1"
                        placeholder="Vous pouvez Ã©crire un message..."
                    >
                    </wcs-textarea>
                    <input 
                        name="type" 
                        value="create-message" 
                        type="hidden" 
                    />
                    <wcs-button 
                        type="submit" 
                        class="wcs-primary">
                        Envoyer
                    </wcs-button>
                </form>
            </div>
        </div>
    </div>
</div>