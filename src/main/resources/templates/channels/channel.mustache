<div 
    hx-ext="ws"
    ws-connect="/channels/{{ channelId }}"
    x-channel-id="{{ channelId }}" 
    class="channel">
    <div class="channel-main">
        <div class="channel-users">
            <ul class="channel-users-list">

            </ul>
        </div>
        <div class="channel-messages">
            
        </div>
    </div>
    <div class="channel-form">
        <form ws-send>
            <wcs-input name="message"></wcs-input>
            <wcs-button type="submit" class="wcs-primary">
                Envoyer
            </wcs-button>
        </form>
    </div>
    <div class="channel-message-form">
        <form ws-send>
            <wcs-form-field>
                <wcs-input name="message">
                </wcs-input>
            </wcs-form-field>
            <wcs-button 
                type="submit" 
                {{^user}}
                    disabled
                {{/user}}
                class="wcs-primary">
                Envoyer
            </wcs-button>
        </form>
    </div>
</div>